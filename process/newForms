<?php 
    include('../config/db.php');
    $DataBase = new db();
    if(isset($_POST) && !empty($_POST)){
        
        $name = $DataBase->sanitize($_POST['forms']);
        $description= $DataBase->sanitize($_POST['password']);
        $active= $DataBase->sanitize($_POST['active']);
        $location = $_POST['location'];
        $res = $DataBase->insert_t_forms($active, $name, $description, true);//siempre sera true por que es un nuevo usuario activo, la fecha de ultima entrada no se añade por obvias razones

        if($res){
            header("location: ../$location.php");
        }else{
            echo 'Error al eliminar un registro';
        }
        
        
       
    }
    
?>